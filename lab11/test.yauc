// Построение таблицы истинности для логической функции трех аргументов (x,y,z)

i = 0;

del = "+---+---+---+---+";
print(del + "\n| X | Y | Z | F |\n" + del + "\n");

while (i<8) do
	x = i % 2;
	y = (i / 2) % 2;
	z = (i / 4);

	// Строкой ниже нужно указать логическую функцию:
	func = (x | y) & z;
	//
	
	print("| " + x + " | " + y + " | " + z + " | " + func + " |\n");	
	i = i + 1;
end;
print(del);